<h2>Books</h2>

<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

<!--　編集用のリンク。id一致しないと表示されないので注意　-->
<% if @user == current_user %>
<p><%= link_to "編集", edit_user_path(@user.id) %></p>
<% end %>

<!--　新規投稿フォーム　-->
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

