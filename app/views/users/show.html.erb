<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name <%= @user.name %></h4>
  <h4>introduction <%= @user.introduction %></h4>
</div>

<!-- ユーザーの投稿一覧 -->

<% @book.each do |book| %>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>Title：<%= link_to book_path(@books.id) do %><%= book.title %><% end %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>